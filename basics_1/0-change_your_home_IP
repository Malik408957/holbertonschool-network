#!/usr/bin/env bash
# This script configures the Ubuntu server to resolve:
# localhost to 127.0.0.2
# facebook.com to 8.8.8.8

# Backup original hosts file
sudo cp /etc/hosts /etc/hosts.backup

# COMPLETELY rebuild the hosts file from scratch
sudo tee /etc/hosts > /dev/null <<'EOF'
127.0.0.2    localhost
8.8.8.8      facebook.com
EOF

# Clear DNS cache
sudo systemctl restart systemd-resolved

echo "Hosts file completely rebuilt and DNS cache cleared!"
